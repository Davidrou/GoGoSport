<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0FFFF"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="@color/top_bar_normal_bg"
        android:gravity="center_vertical" >
        <ImageButton
            android:id="@+id/top_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:background="@drawable/back" />

        <TextView
            android:id="@+id/top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="发起活动"
            android:textColor="#fff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/top_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/top_right_button"
            android:text="确认"
            android:textColor="@color/top_bar_text_color"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/sport_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="活动标题"
            android:singleLine="true" />
    </LinearLayout>

    <!-- 分割线 -->

    <View
        android:layout_width="fill_parent"
        android:layout_height="5px"
        android:background="#C0C0C0" />

    <!-- 开始时间 -->

    <LinearLayout
        android:id="@+id/et_start"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/holdsport_linearlayout"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="15dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/holdsport_time" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="开始时间" />

        <Button
            android:id="@+id/et_start_time"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:background="#00000000" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:src="@drawable/holdsport_right" />
    </LinearLayout>

    <!-- 分割线 -->

    <View
        android:layout_width="fill_parent"
        android:layout_height="5px"
        android:background="#C0C0C0" />

    <!-- 结束时间 -->

    <LinearLayout
        android:id="@+id/et_end"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/holdsport_linearlayout"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="15dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/holdsport_time" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="结束时间" />

        <Button
            android:id="@+id/et_end_time"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:background="#00000000" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:src="@drawable/holdsport_right" />
    </LinearLayout>
    
     <!-- 分割线 -->

    <View
        android:layout_width="fill_parent"
        android:layout_height="5px"
        android:background="#C0C0C0" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/sport_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="活动人数" />

        <Spinner
            android:id="@+id/sport_type"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:tag="wenzi" />
    </LinearLayout>

    <!-- 分割线 -->

    <View
        android:layout_width="fill_parent"
        android:layout_height="5px"
        android:background="#C0C0C0" />

    <!-- 地点 -->

    <LinearLayout
        android:id="@+id/pickplace"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/holdsport_linearlayout"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="15dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/holdsport_position" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="地 点" />

        <TextView
            android:id="@+id/sport_address"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:hint="地点"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:src="@drawable/holdsport_right" />
    </LinearLayout>

   

    <!-- 分割线 -->

    <View
        android:layout_width="fill_parent"
        android:layout_height="5px"
        android:background="#C0C0C0" />

    <!-- 详 情 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F0FFFF"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="15dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/holdsport_details" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="内容" />

        <EditText
            android:id="@+id/sport_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp" />
    </LinearLayout>

</LinearLayout>